# ===========================================
# E-TestHub API Environment Variables
# ===========================================
# Copy file này thành .env và điền giá trị thật
# cp env.example .env
# ===========================================

# Server Port
PORT=5000

# MongoDB Connection String
# Lấy từ MongoDB Atlas: https://cloud.mongodb.com
MONGO_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/e-testhub?retryWrites=true&w=majority

# JWT Secret Key (đặt chuỗi bất kỳ, càng dài càng tốt)
JWT_SECRET=your-super-secret-jwt-key-here

# Node Environment
NODE_ENV=development

